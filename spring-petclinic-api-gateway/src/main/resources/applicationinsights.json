{
  "role": {
    "name": "api-gateway"
  },
  "instrumentation": {
    "micrometer": {
      "enabled": true
    },
    "logging": {
      "level": "INFO"
    }
  },
  "jmxMetrics": [
    {
      "name": "JVM uptime (millis)",
      "objectName": "java.lang:type=Runtime",
      "attribute": "Uptime"
    },
    {
      "name": "MetaSpace Used",
      "objectName": "java.lang:type=MemoryPool,name=Metaspace",
      "attribute": "Usage.used"
    }
  ],
  "preview": {
    "instrumentation": {
      "apacheCamel": {
        "enabled": true
      },
      "springIntegration": {
        "enabled": true
      }
    }
  }
}